<div class="section">
    <h1>Eat Dat Burger!</h1>
    <p>Add and eat as many burgers as you want!</p>
</div>

<div class="divider"></div>

<div class="section">
    <h3>Add a Burger</h3>
    <div class="row">
        <div class="col s12">

            <form class="create-form" action="#">
                <div class="form-group">
                    <label for="burger-name">Burger Name:</label>
                    <input type="text" id="burger-name" name="burger_name">
                </div>

                <div class="form-group">
                    <p>
                        <label for="devoured-false">
                            <input type="radio" name="devoured" value="0" id="devoured-false" checked />
                            <span>You've never eaten this burger before!</span>
                        </label>
                    </p>
                    <p>
                        <label for="devoured-true">
                            <input type="radio" name="devoured" value="1" id="devoured-true" />
                            <span>Already devoured, baby!</span>
                        </label>
                    </p>      
                </div>
                <br>

                <button type="submit">Add a Burger</button>
            </form>

        </div>
    </div>
</div>

<div class="divider"></div>

<div class="section">
    <h3>Burger Collection</h3>
    <div class="row">
        <div class="col s12 m6 l3">
            <h6>D E V O U R</h6>
            <ul id="not-devoured-burgers">
                {{#each burgers}}
                    {{#unless devoured}}
                        {{> burgers/burger-block devouredVariable=true}}
                    {{/unless}}
                {{/each}}
            </ul>

        </div>
        <div class="col s12 m6 l3">
            <h6>Eat this again!</h6>
            <ul id="devoured-burgers">
                {{#each burgers}}
                    {{#if devoured}}
                        {{> burgers/burger-block devouredVariable=false}}
                    {{/if}}
                {{/each}}
            </ul>

        </div>
    </div>
</div>