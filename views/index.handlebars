<h1>Burgers!</h1>

<ul id="not-devoured-burgers">
    {{#each burgers}}
        {{#unless devoured}}
            {{> burgers/burger-block devouredVariable=true}}
        {{/unless}}
    {{/each}}
</ul>

<ul>
    {{#each burgers}}
        {{#if devoured}}
            {{> burgers/burger-block devouredVariable=false}}
        {{/if}}
    {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">
    <div class="form-group">
        <label for="bur">Burger Name:</label>
        <input type="text" id="bur" name="name">
    </div>

    <div class="form-group">
        <label for="devoured">Devoured?</label><br>
        <input type="radio" name="devoured" value="1" checked> Devoured!<br>
        <input type="radio" name="devoured" value="0"> Not yet...
    </div>

    <button type="submit">Add a Burger</button>
</form>